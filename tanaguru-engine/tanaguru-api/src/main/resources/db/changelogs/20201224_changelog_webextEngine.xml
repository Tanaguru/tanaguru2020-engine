<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create_webext_engine" author="lpedrau">
        <createTable tableName="webext_engine">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="engineName" type="varchar(30)"/>
            <column name="engineVersion" type="integer"/>
            <column name="engineContent" type="bytea"/>
        </createTable>
        <addPrimaryKey tableName="webext_engine" columnNames="id"/>
        <addNotNullConstraint tableName="webext_engine" columnName="engineName"/>
        <addNotNullConstraint tableName="webext_engine" columnName="engineVersion"/>
        <addUniqueConstraint tableName="webext_engine" columnNames="engineVersion"/>  
        <addNotNullConstraint tableName="webext_engine" columnName="engineContent"/>

        <rollback>
            <dropTable tableName="webext_engine"/>
        </rollback>
    </changeSet>
</databaseChangeLog>