<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create_webext_engine" author="lpedrau">
        <createTable tableName="webext_engine">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="engine_version" type="varchar(30)"/>
            <column name="test_hierarchy_id" type="bigint"/>
        </createTable>
        <addPrimaryKey tableName="webext_engine" columnNames="id"/>
        <addNotNullConstraint tableName="webext_engine" columnName="engine_version"/>
        <addNotNullConstraint tableName="webext_engine" columnName="test_hierarchy_id"/>

        <addForeignKeyConstraint
                baseTableName="webext_engine"
                baseColumnNames="test_hierarchy_id"
                constraintName="fk_webext_engine_test_hierarchy_id"
                referencedTableName="test_hierarchy"
                referencedColumnNames="id"/>

        <rollback>
            <dropTable tableName="webext_engine"/>
        </rollback>
    </changeSet>
</databaseChangeLog>